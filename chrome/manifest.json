{
   "name":        "Missing e",
   "version":     "2.2.16",
   "description": "Useful features and customizations for Tumblr.",
   "icons":       { "16": "missinge16.png",
                    "48": "missinge48.png",
                    "128": "missinge128.png" },
   "permissions": [
      "management",
      "tabs",
      "http://*/*",
      "http://*/"
   ],
   "options_page": "options.html",
   "background_page": "background.html",
   "homepage_url": "http://missinge.infraware.ca",
   "content_scripts": [
      {
         "matches": ["http://www.tumblr.com/*"],
         "js": ["common/whoami.js",
                "common/addmenu.js",
                "common/localizations.js",
                "common/utils.js"],
         "all_frames": true
      },
      {
         "matches": ["http://missinge.infraware.ca/*"],
         "js": ["common/versionchk.js"]
      }
   ]
}

